<p id="notice">
	<%= notice %>
</p>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><p><%= link_to "Show", book_path(book) %></p></td>
			<td><p><%= link_to "Edit", edit_book_path(book) %></p></td>
			<td><%= link_to "destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?'} %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<h1>New book</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.count >= 1 %>

	<p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
<% end %>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<h2>Title</h2>
	<%= f.text_field :title %>

	<h2>Body</h2>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>
<% end %>